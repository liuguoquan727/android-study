<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.liuguoquan.module.ui"
    >

  <application
      android:name=".App"
      android:allowBackup="false"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".ModuleUiActivityMainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.liuguoquan.module.ui.provider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/module_ui_file_paths"/>
    </provider>

    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.BehaviorActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/CollapseTheme"
        android:name=".design.ScrollingActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.BottomSheetBehaviorActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.ToolbarActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.TextInputActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/CollapseTheme"
        android:name=".design.CollapseActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.CoordinatorLayoutActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.FabActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.PaletteActivity"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:theme="@style/AppTheme.NoActionBar"
        android:name=".design.TabLayoutActivity"
        android:screenOrientation="portrait">
    </activity>

  </application>

</manifest>
