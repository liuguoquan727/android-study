<manifest xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.liuguoquan.module.ui"
    >

  <application
      android:allowBackup="false"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.liuguoquan.module.ui.provider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/module_ui_file_paths"/>
    </provider>

    <activity
        android:name=".design.BehaviorActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.ScrollingActivity"
        android:screenOrientation="portrait"
        android:theme="@style/CollapseTheme">
    </activity>
    <activity
        android:name=".design.BottomSheetBehaviorActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.ToolbarActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.TextInputActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.CollapseActivity"
        android:screenOrientation="portrait"
        android:theme="@style/CollapseTheme">
    </activity>
    <activity
        android:name=".design.CoordinatorLayoutActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.FabActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.PaletteActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
    <activity
        android:name=".design.TabLayoutActivity"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme.NoActionBar">
    </activity>
  </application>

</manifest>
